@Pulse.Server_HostAddress = http://localhost:5069

### Get all venues
GET {{Pulse.Server_HostAddress}}/venues
Accept: application/json

### Create a new venue
POST {{Pulse.Server_HostAddress}}/venues
Content-Type: application/json
Accept: application/json

{
    "name": "Joe’s Bar",
    "location": "123 Main St",
    "timezone": "America/New_York"
}

### Get venue by Id
GET {{Pulse.Server_HostAddress}}/venues/1
Accept: application/json

### Delete a venue
DELETE {{Pulse.Server_HostAddress}}/venues/1
Accept: application/json

### Create a one-time special
POST {{Pulse.Server_HostAddress}}/specials
Content-Type: application/json
Accept: application/json

{
    "venueId": 1,
    "content": "Happy Hour $5 Beers",
    "type": 1,
    "startDate": "2025-04-01",
    "startTime": "17:00",
    "endDate": "2025-04-01",
    "endTime": "19:00",
    "isRecurring": false,
    "cronSchedule": null
}

### Get specials for venue
GET {{Pulse.Server_HostAddress}}/specials/venue/1
Accept: application/json

### Get special by Id
GET {{Pulse.Server_HostAddress}}/specials/1
Accept: application/json

### Get all active specials
GET {{Pulse.Server_HostAddress}}/specials/active
Accept: application/json

### Create a recurring special
POST {{Pulse.Server_HostAddress}}/specials
Content-Type: application/json
Accept: application/json

{
    "venueId": 1,
    "content": "Monday Night Trivia",
    "type": 2,
    "startDate": "2025-04-07",
    "startTime": "18:00",
    "endDate": "2025-12-31",
    "endTime": "20:00",
    "isRecurring": true,
    "cronSchedule": "0 18 * * 1"
}

### Update a special
PUT {{Pulse.Server_HostAddress}}/specials/1
Content-Type: application/json
Accept: application/json

{
    "venueId": 1,
    "content": "Updated Happy Hour $4 Beers",
    "type": 1,
    "startDate": "2025-04-01",
    "startTime": "16:00",
    "endDate": "2025-04-01",
    "endTime": "18:00",
    "isRecurring": false,
    "cronSchedule": null
}

### Delete a special
DELETE {{Pulse.Server_HostAddress}}/specials/1
Accept: application/json